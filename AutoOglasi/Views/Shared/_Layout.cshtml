<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @T["AppTitle"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoOglasi.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">@T["AppTitle"]</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- Left nav -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">@T["Nav_Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Onama">@T["Nav_About"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Kontakt">@T["Nav_Contact"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Automobili" asp-action="Create">@T["Nav_AddCar"]</a>
                        </li>
                    </ul>

                    <!-- Language switcher -->
                    <div class="d-flex align-items-center me-3">
                        <span class="navbar-text me-2">@T["Language"]:</span>
                        @{
                            var back = (Context.Request.Path + Context.Request.QueryString).ToString();
                        }
                        <a class="nav-link d-inline px-1"
                           asp-controller="Lang" asp-action="Set"
                           asp-route-c="sr-Latn-RS" asp-route-returnUrl="@back">SR</a> |
                        <a class="nav-link d-inline px-1"
                           asp-controller="Lang" asp-action="Set"
                           asp-route-c="sr-Cyrl-RS" asp-route-returnUrl="@back">СР</a> |
                        <a class="nav-link d-inline px-1"
                           asp-controller="Lang" asp-action="Set"
                           asp-route-c="en" asp-route-returnUrl="@back">EN</a>
                    </div>

                    <!-- Auth -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-2">@T["LoggedIn"]: @User.Identity!.Name</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" asp-antiforgery="true" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link p-0">@T["Logout"]</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">@T["Login"]</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - @T["AppTitle"] - <a asp-controller="Home" asp-action="Privacy">@T["Privacy"]</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
